<div class="container-fluid bg"> 
    <div class="wrapper">
    <form class="form-signin" name="myForm">
    <div class="form-group">
      <label class="l1"  for="email">Username:</label>
      <input type="email" class="form-control i1" ng-model="username" name="username" required>
      <span class="error" ng-show=" myForm.username.$touched && myForm.username.$invalid"> Name is required.</span>

    </div>
    <div class="form-group">
      <label class="l1" for="pwd">Password:</label>
      <input type="password" class="form-control i1" ng-model="password" name="password" required>
      <span class="error" ng-show="myForm.password.$touched && myForm.password.$invalid"> Password is required.</span>

    </div>
    <div class="checkbox">
      <label class="l1"><input type="checkbox" name="remember"> Remember me</label>
    </div>
   <button type="submit" class="btn btn-success center bn center-block" ng-click="login()" >Login</button>
   <a  class=" ctxt pull-left">Change Password</a>
   <a  class=" ftxt pull-right">Forgot Password</a>
  </form>
    </div>
</div>